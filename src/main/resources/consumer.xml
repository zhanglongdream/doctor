<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="h5-web" logger="slf4j" />

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${zookeeper.url}" />

    <!-- 用dubbo协议在20980端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20980" />

    <!-- 扫描注解包路径，多个包用逗号分隔，不填pacakge表示扫描当前ApplicationContext中所有的类 -->
    <dubbo:annotation package="com.insaic.h5" />
    <dubbo:reference interface="com.insaic.common.code.service.CodeEntryService" id="codeEntryService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.dms.service.DealerManagementService" id="dealerManagementService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.integration.service.OwnerAndVehicleInfoService" id="ownerAndVehicleInfoService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.udp.service.IUbiService" id="iUbiService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.udp.service.IDrivingBehaviorService" id="iDrivingBehaviorService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.udp.service.IInitPremiumService" id="iInitPremiumService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.ecs.service.ECOrderService" id="ecOrderService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.ecs.service.ECProductService" id="ecProductService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.ecs.service.ECUserService" id="ecUserService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.ecs.service.ECSettlementService" id="ecSettlementService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.ecs.service.ECSettlementBillService" id="ecSettlementBillService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.ecs.service.UBIService" id="ubiService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.ecs.service.BasicDataService" id="basicDataService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.ecs.service.AutoPolicyService" id="autoPolicyService" version="1.0.0">
        <dubbo:method name="calculatePremium" timeout="91000"/>
        <dubbo:method name="submitPolicy" timeout="91000"/>
    </dubbo:reference>
    <dubbo:reference interface="com.insaic.ecs.service.AutoPolicyQueryService" id="autoPolicyQueryService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.ecs.service.WeChatService" id="weChatService" version="1.0.0"/>
    <dubbo:reference interface="com.insaic.common.security.service.SecurityService" id="securityService" version="1.0.0"/>
    <dubbo:consumer cluster="failfast" timeout="60000" check="false" />

</beans>